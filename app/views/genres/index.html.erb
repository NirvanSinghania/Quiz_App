<h1>All Genres </h1>
<% if notice %>
<p id = "notice">
<%= notice %>
</p>
<% end %>
<table>
    <thead>
        <tr>
            <th >Name</th>
            <th > Link to genre</th>
            <th> leaderboard</th>
            <% if current_user and current_user.isadmin? %>
            <th></th>
            <th></th>
            <% end %>
        </tr>
    </thead>

    <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to 'Show', genre %></td>
                <td><%= link_to 'Go' , 'leaderboard/genres/' + genre.id.to_s %></td>
                <% if current_user and current_user.isadmin? %>
                <td><%= link_to "delete", genre, method: :delete,
                                  data: { confirm: "You sure?" } %>
                </td>
                <td><%= link_to "Update" , edit_genre_path(genre.id) %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<br>
