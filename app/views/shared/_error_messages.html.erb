<% if @user.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            Please resolve the following errors before logging in!
        </div>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
