<% provide(:title, 'Create Question') %>
<h1>Create Question</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
 

      <%= form_for(@question) do |f| %>
      

      <%= f.label :content%>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.label :optionA %>
      <%= f.text_field :optionA, class: 'form-control' %>

      <%= f.label :optionB %>
      <%= f.text_field :optionB, class: 'form-control' %>

      <%= f.label :optionC %>
      <%= f.text_field :optionC, class: 'form-control' %>

      <%= f.label :optionD %>
      <%= f.text_field :optionD, class: 'form-control' %>


      <%= f.label :answer %>
      <%= f.text_field :answer , class: 'form-control' %>

      <%= f.label :qtype %>
      <%= f.number_field :qtype , class: 'form-control' %>

      <%= f.label :points  %>
      <%= f.number_field :points , class: 'form-control' %>

      <%= f.label :Quiz  %>
      <%= f.number_field :quizz_id , class: 'form-control' %>

      <%= f.submit "Create question", class: "btn btn-primary" %>
      
       <p><%= link_to "Go back to Home" , root_path %></p>
    <% end %>
      
       
  </div>
</div>
