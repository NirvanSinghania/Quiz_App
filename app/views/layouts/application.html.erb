<!DOCTYPE html>
<html>
  <head>
    <title>Quiz App</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "Help",   static_pages_help_path %></li>

            <% if logged_in? %>
              <% if current_user.isadmin? %>
              
            <li><%= link_to "Genre", new_genre_path %></li>
            <li><%= link_to "Subgenre", new_subgenre_path %></li>
            <li><%= link_to "Quiz", new_quizz_path %></li>
            <li><%= link_to "Question", new_question_path %></li>
            <li><%= link_to "Users", users_path %></li>

           
            <% end %>
            <li><%= link_to "Profile", current_user %></li>
            <li> <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <li><%= link_to "Sign Up", signup_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>